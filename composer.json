{
    "name"              : "jbzoo/mock-server",
    "type"              : "library",
    "license"           : "MIT",
    "description"       : "Flexible HTTP mocking application for testing and fast prototyping",
    "keywords"          : [
        "testing", "mock", "php", "http", "mock-server", "stubbing",
        "http-server", "prototyping", "jbzoo", "httpmock", "mmock"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"                           : "^8.1",
        "ext-pcntl"                     : "*",

        "amphp/amp"                     : ">=2.6.2",
        "amphp/log"                     : ">=1.2.0",
        "amphp/file"                    : ">=2.0.4",
        "amphp/http-client"             : ">=4.6.2",
        "amphp/http-server"             : ">=2.1.8",
        "amphp/http-server-router"      : ">=1.0.2",
        "amphp/http-server-form-parser" : ">=1.1.5",

        "jbzoo/data"                    : "7.x-dev",
        "jbzoo/utils"                   : "7.x-dev",

        "symfony/console"               : ">=6.2.7",
        "symfony/yaml"                  : ">=6.2.7",

        "monolog/monolog"               : ">=3.3.1",
        "yosymfony/resource-watcher"    : ">=3.0.0",
        "winzou/state-machine"          : ">=0.4.3"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "7.x-dev",
        "jbzoo/http-client" : "7.x-dev",
        "guzzlehttp/guzzle" : ">=7.5.0"
    },

    "bin"               : ["jbzoo-mock-server"],

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\MockServer\\" : "src"
        },
        "files" : ["src/functions.php"]
    },

    "autoload-dev"      : {
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "tests"
        }
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
