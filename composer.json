{
    "name"              : "jbzoo/mock-server",
    "type"              : "library",
    "description"       : "Flexible HTTP mocking application for testing and fast prototyping",
    "license"           : "MIT",

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"                           : ">=7.2",
        "ext-pcntl"                     : "*",

        "amphp/amp"                     : "^2.5.2",
        "amphp/http-server"             : "^2.1.0",
        "amphp/http-server-router"      : "^1.0.2",
        "amphp/log"                     : "^1.1.0",

        "jbzoo/data"                    : "^4.1.3",
        "jbzoo/utils"                   : "^4.2.3",

        "monolog/monolog"               : "^2.2.0",
        "yosymfony/resource-watcher"    : "^3.0.0",
        "amphp/http-server-form-parser" : "^1.1.4"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^2.6.2",
        "jbzoo/http-client" : "^3.4.2"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\MockServer\\" : "src"
        },
        "files" : ["src/functions.php"]
    },

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
